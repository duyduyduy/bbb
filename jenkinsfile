pipeline {
    agent any

    stages {
        stage('build') {
            steps {
                echo 'Hello World'
                sh """pwd"""
                // sh """ls"""
                //  sh """ls"""
                // sh """ cd file """
                sh """ls"""
                sh """ docker ps """
                sh """docker build -t cowfile -f jenkindockerfile ."""
                sh """docker rm -f cow"""
                 
                
            }
        }
        stage('test'){
                steps{
                sh """ docker run -d --name cow -p 8081:8080  cowfile"""
                sh """sleep 10"""
                sh """curl jenkins-docker:8081 """

                }

        }


        stage('publish'){
            steps {
                sh'docker login  -u duyduyduyduy -p 123456789'
                sh"""docker tag cowfile duyduyduyduy/cow"""
                sh"""docker push duyduyduyduy/cow"""
                sh"""    docker rm -f super  """
                 



            }
        }

      stage('deploy'){
        steps{
                sh"""docker pull duyduyduyduy/cow"""
                sh""" docker rm -f practical_mestorf """
                
                sh """ docker run -d -p 9090:8080 --name super duyduyduyduy/cow"""
                sh """sleep 10"""
                sh """curl jenkins-docker:9090 """

        }
    }






        }
   

post {
        always{
    emailext body : 'check console output at $BUILD_URL to view the result. \n\n  ${CHANGES}  \n\n  ----',
    subject:'build in jenkins : $PROJECT_NAME - $BUILD_NUMBER',
            to "duyittien12@gmail.com"
}

}




    }
    
    
